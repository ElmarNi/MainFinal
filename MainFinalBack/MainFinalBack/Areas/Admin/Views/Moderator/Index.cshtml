@model IList<ApplicationUser>

    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Dashboard">Admin</a></li>
                <li class="breadcrumb-item active" aria-current="page">Moderators</li>
            </ol>
        </nav>
        <a class="btn btn-primary btn-block my-3" asp-action="Create">Create</a>
        <div class="table-responsive">
            <table class="table text-white w-100" id="moderators">
                <thead>
                    <tr>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Email</th>
                        <th>Username</th>
                        <th>Blocked</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.Firstname</td>
                            <td>@u.Lastname</td>
                            <td>@u.Email</td>
                            <td>@u.UserName</td>
                            <td>
                                @if (u.IsBlocked)
                                {
                                    <p style="margin:0">Yes</p>
                                }
                                else
                                {
                                    <p style="margin:0">No</p>
                                }
                            </td>
                            <td>
                                @if (u.IsBlocked)
                                {
                                    <a href="" class="btn btn-info btn-block" id="un-block" data-id="@u.Id">Unblock</a>
                                }
                                else
                                {
                                    <a href="" class="btn btn-danger btn-block" id="block" data-id="@u.Id">Block</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
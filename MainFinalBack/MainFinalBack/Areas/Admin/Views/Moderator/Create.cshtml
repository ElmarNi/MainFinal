@model RegisterVM
<div class="container" id="moderatorCreate">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Moderators</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-12">
            <form method="post" class="w-100 d-flex flex-wrap my-3 position-relative">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group col-md-3">
                    <label asp-for="Firstname"></label>
                    <input class="form-control" asp-for="Firstname" />
                    <span asp-validation-for="Firstname" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Lastname"></label>
                    <input class="form-control" asp-for="Lastname" />
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="UserName"></label>
                    <input class="form-control" asp-for="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="ConfirmPassword"></label>
                    <input class="form-control" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-block btn-success mx-3" value="Update" />
            </form>

        </div>
        @section Scripts{
            <partial name="_ValidationScriptsPartial" />
        }
    </div>
</div>

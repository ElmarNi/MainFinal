
@model Model
<style>
    option {
        color: black;
    }
</style>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Dashboard">Admin</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Models</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<form method="post" class="w-100 d-flex flex-wrap">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group col-6">
        <label>Brand:</label>
        <select class="form-control" asp-items="@(new SelectList(ViewBag.Brands, "Id", "Name"))" asp-for="BrandId">
            <option class=" text-dark" value="">Select Brand</option>
        </select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>
    <div class="form-group col-6">
        <label>Model:</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for=" Name" class="text-danger"></span>
    </div>
    <input type="submit" class="mx-3 btn btn-block btn-success" value="Add" />
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
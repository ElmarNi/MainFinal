@model Contact
<section id="contact">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-10 col-md-9 col-lg-5 wrapper h-100">
                <a href="/" class="black-logo-text mb-4" title="Go to home">
                    <p class="rent">Rent</p>
                    <p class="now">Now</p>
                </a>
                <form method="POST">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group mb-3 position-relative">
                        <label for="">Your Name</label>
                        <input asp-for="Name" placeholder="Type your name" class="form-control sign-in-input px-3">
                        <span class="line"></span>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group position-relative">
                        <label for="">Email</label>
                        <input asp-for="Email" placeholder="Type your email" class="form-control sign-in-input px-3">
                        <span class="line"></span>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group position-relative">
                        <label for="">Your Message</label>
                        <textarea asp-for="Message" cols="30" rows="10" class="form-control sign-in-input px-3"></textarea>
                        <span class="line"></span>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Send" class="mt-4">
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
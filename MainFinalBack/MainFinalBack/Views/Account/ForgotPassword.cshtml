@model ForgotPasswordVM
<style>
    form span {
        font-size: 14px;
        color: red;
    }

    ul {
        color: red;
        font-size: 14px;
    }
</style>
<section id="login">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-10 col-md-9 col-lg-5 wrapper h-100">
                <a href="/" class="black-logo-text mb-4" title="Go to home">
                    <p class="rent">Rent</p>
                    <p class="now">Now</p>
                </a>
                <form method="POST">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group mb-3 position-relative">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" placeholder="Type your email" class="form-control sign-in-input px-3">
                        <span class="line"></span>
                        <span asp-validation-for="Email"></span>
                    </div>
                    <input type="submit" value="Confirm Email" class="mt-4">
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

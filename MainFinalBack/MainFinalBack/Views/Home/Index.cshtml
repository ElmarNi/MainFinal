@model HomeVM

@if (ViewBag.VipCarsCount > 0)
{
    <!-- bootstrap slider -->
    <section id="slider" class="p-0 mt-5 mt-lg-0">
        <div class="container-fluid">
            <div class="row position-relative">

                <div id="carouselExampleControls" class="carousel slide w-100" data-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Advertisements.Count(); i++)
                        {
                            <div class="carousel-item position-relative @(i == 0? "active" : "")">
                                <div class="details">
                                    <ul>
                                        <li>
                                            <i class="fas fa-map-marker-alt"></i>
                                            @Model.Advertisements.ElementAt(i).Car.City.Country.Name, @Model.Advertisements.ElementAt(i).Car.City.Name
                                        </li>
                                        <li>
                                            <i class="fas fa-cogs"></i>
                                            Transmission: @Model.Advertisements.ElementAt(i).Car.Transmission.Name
                                        </li>
                                        <li>
                                            <i class="far fa-calendar-times"></i>
                                            Year: @Model.Advertisements.ElementAt(i).Car.ManufactureYear
                                        </li>
                                        <li>
                                            <i class="fas fa-road"></i>
                                            Milage: @Model.Advertisements.ElementAt(i).Car.Milage
                                        </li>
                                        <li class="m-0">
                                            <i class="fas fa-palette"></i>
                                            Color: @Model.Advertisements.ElementAt(i).Car.Color.Name
                                        </li>
                                    </ul>
                                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@Model.Advertisements.ElementAt(i).Id">Details</a>
                                </div>
                                <img src="~/img/@Model.Advertisements.ElementAt(i).Car.MainImageUrl" class="d-block w-100" alt="...">
                            </div>

                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <section id="sub-banner" style="background-image: url(img/@ViewBag.Banner)">
        <div class="sub-banner">
            <div class="breadcrumb-areas">
                <h1>Home</h1>
                <ul class="breadcrumbs">
                    <li class="active">Home</li>
                </ul>
            </div>
        </div>
    </section>
}


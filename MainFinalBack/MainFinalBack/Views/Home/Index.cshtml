<!-- vehicle types -->
@if ( ViewBag.LowestStandart != null &&  ViewBag.LowestEconom != null &&  ViewBag.LowestPremium != null)
{
    <section id="vehicleTypes">
        <div class="container">
            <div class="row heading-row justify-content-center">
                <h2 class="section-title text-white">
                    vehicle categories
                </h2>
            </div>
            <div class="row body-row">
                <div class="col-md-4 mb-3">
                    <div class="vehicle-type-single p-4">
                        <div class="top mb-4">
                            <h3 class="mb-4">Economy</h3>
                            <a class="price" asp-controller="Cars" asp-action="index">
                                <p>from</p>
                                <h4>$@ViewBag.LowestEconom/</h4> <span>day</span>
                            </a>
                        </div>
                        <div class="text-center bottom position-relative">
                            <img src="img/economy.png" alt="economy class" class="img-fluid">
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="vehicle-type-single p-4">
                        <div class="top mb-4">
                            <h3 class="mb-4">Standart</h3>
                            <a class="price" asp-controller="Cars" asp-action="index">
                                <p>from</p>
                                <h4>$@ViewBag.LowestStandart/</h4> <span>day</span>
                            </a>
                        </div>
                        <div class="text-center bottom position-relative">
                            <img src="img/standart.png" alt="standart class" class="img-fluid">
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="vehicle-type-single p-4">
                        <div class="top mb-4">
                            <h3 class="mb-4">Premium</h3>
                            <a class="price" asp-controller="Cars" asp-action="index">
                                <p>from</p>
                                <h4>$ @ViewBag.LowestPremium/</h4> <span>day</span>
                            </a>
                        </div>
                        <div class="text-center bottom position-relative">
                            <img src="img/premium.png" alt="premium class" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<!-- news -->
<section id="news">
    <div class="container">
        <div class="row heading-row justify-content-center">
            <h2 class="section-title text-black">
                News & Updates
            </h2>
        </div>
        <div class="row body-row justify-content-center">
            @foreach (var blog in Model.Blogs)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="single-news">
                        <div class="image">
                            <a asp-controller="Blog" asp-action="details" asp-route-id="@blog.Id">
                                <img src="img/@blog.MainImageUrl">
                            </a>
                        </div>
                        <div class="title">
                            <div class="news-datebox">
                                <h4>@blog.UpdatedDate.Day</h4>
                                <span>@blog.UpdatedDate.ToString("MMM"), @blog.UpdatedDate.Year</span>
                            </div>
                            <div class="news-header">
                                <h5>
                                    <a asp-controller="Blog" asp-action="details" asp-route-id="@blog.Id" style="word-break:break-word">
                                        @blog.Header
                                    </a>
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
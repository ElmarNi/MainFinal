@model IEnumerable<TermHeader>
<section id="sub-banner" style="background-image: url(img/@ViewBag.Banner)">
    <div class="sub-banner">
        <div class="breadcrumb-areas">
            <h1>Terms</h1>
            <ul class="breadcrumbs">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="active">Terms</li>
            </ul>
        </div>
    </div>
</section>

<section id="terms">
    <div class="container">
        <div class="row">
            <div class="col-12">
                @foreach (var header in Model)
                {
                    <h5>@header.Header: </h5>
                    <ul style="list-style: none; padding: 0">
                        @for (int i = 0; i < header.TermContents.Count(); i++)
                        {
                            <li>@header.Id.@(i+1) @header.TermContents.ElementAt(i).Content</li>
                        }
                    </ul>
                }

            </div>
        </div>
    </div>
</section>
<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    @RenderSection("Css", false)

    <!-- custom css -->
    <link rel="stylesheet" href="~/css/style.css">

    <title>Rent a car</title>
</head>

<body>

    <div id="preloader">
        <img src="~/img/preloader.gif" alt="">
    </div>
    @if (ViewBag.IsHeaderNonVisible == null)
    {
        <!-- header for large screens -->
        <header id="large-screens" class="d-none d-lg-block">

            <div class="topbar">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-5">
                            <div class="loginAndRegister">
                                <ul>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li class="mr-3">
                                            <i class="fas fa-sign-in-alt"></i>
                                            @Html.ActionLink("Logout", "Logout", "Account")
                                        </li>
                                        <li class="mr-3">
                                            <i class="far fa-user"></i>
                                            @if (User.IsInRole("admin"))
                                            {
                                                <a asp-area="admin" asp-controller="Dashboard" asp-action="index">Admin</a>
                                            }
                                            @if (User.IsInRole("member"))
                                            {
                                                <a asp-area="user" asp-controller="Dashboard" asp-action="index">User</a>
                                            }
                                            @if (User.IsInRole("moderator"))
                                            {
                                                <a asp-area="moderator" asp-controller="Dashboard" asp-action="index">Moderator</a>
                                            }
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="mr-3">
                                            <i class="fas fa-sign-in-alt"></i>
                                            @Html.ActionLink("Login", "Login", "Account")
                                        </li>
                                        <li>
                                            <i class="fas fa-user-plus" style="font-size: 20px"></i>
                                            @Html.ActionLink("Register", "Register", "Account")
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="col-7 d-flex justify-content-end contact">
                            <ul>
                                <li class="mr-3">
                                    <i class="fas fa-phone fa-rotate-90"></i>
                                    <a href="tel:+994703347347">
                                        <span>+994703347347</span>
                                    </a>
                                </li>
                                <li>
                                    <i class="far fa-envelope"></i>
                                    <a href="mailTo:rentnow@elmaribrahimli.com">
                                        <span>rentnow@elmaribrahimli.com</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="menubar">
                <div class="container">
                    <div class="row align-items-center">
                        <!-- logo side -->
                        <div class="col-5">
                            <a href="/">
                                <img src="~/img/logo.svg" alt="" class="img-fluid">
                            </a>
                        </div>
                        <!-- menu side -->
                        <div class="col-7">
                            <ul class="menu">
                                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                                    @Html.ActionLink("Home", "Index", "Home")
                                </li>
                                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Cars" ? "active" : "")">
                                    @Html.ActionLink("Cars", "Index", "Cars")
                                </li>
                                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Blog" ? "active" : "")">
                                    @Html.ActionLink("Blog", "Index", "Blog")
                                </li>
                                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Terms" ? "active" : "")">
                                    @Html.ActionLink("Terms", "Index", "Terms")
                                </li>
                                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "About" ? "active" : "")">
                                    @Html.ActionLink("About Us", "Index", "About")
                                </li>
                                <li>
                                    <a asp-controller="contact" asp-action="index">
                                        contact
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- header for small screens -->
        <header id="small-screens" class="d-block d-lg-none">

            <div id="sidebar">
                <a href="/" class="black-logo-text my-1">
                    <p class="rent">Rent</p>
                    <p class="now">Now</p>
                </a>
                <ul>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Cars" ? "active" : "")">
                        @Html.ActionLink("Cars", "Index", "Cars")
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Blog" ? "active" : "")">
                        @Html.ActionLink("Blog", "Index", "Blog")
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Terms" ? "active" : "")">
                        @Html.ActionLink("Terms", "Index", "Terms")
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "About" ? "active" : "")">
                        @Html.ActionLink("About Us", "Index", "About")
                    </li>
                    <li>
                        <a asp-controller="contact" asp-action="index">
                            contact
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>

                        @if (User.IsInRole("admin"))
                        {
                           <li><a asp-area="admin" asp-controller="Dashboard" asp-action="index">Admin</a></li>
                        }
                        @if (User.IsInRole("member"))
                        {
                            <li><a asp-area="user" asp-controller="Dashboard" asp-action="index">User</a></li>
                        }
                        @if (User.IsInRole("moderator"))
                        {
                            <li><a asp-area="moderator" asp-controller="Dashboard" asp-action="index">Moderator</a></li>
                        }
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Login", "Login", "Account")
                        </li>
                        <li>
                            @Html.ActionLink("Register", "Register", "Account")
                        </li>
                    }
                </ul>
            </div>
            <div id="sidebar-btn">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </header>

    }


    @RenderBody()


    @if (ViewBag.IsHeaderNonVisible == null)
    {
        <!-- footer -->
        <footer>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4 mb-3 recent-news">
                        <h3>recent news</h3>
                        @await Component.InvokeAsync("Blog")
                    </div>
                    <div class="col-md-6 col-lg-4 mb-3">
                        <h3 class="text-center text-md-right text-lg-left">quick links</h3>
                        <div class="quick-links">
                            <ul class="d-flex justify-content-between d-md-block text-right text-lg-left">
                                <li><a href="/">Home</a></li>
                                <li><a asp-controller="Cars" asp-action="index">car list</a></li>
                                <li><a asp-controller="Blog" asp-action="index">blog</a></li>
                                <li><a asp-controller="Terms" asp-action="index">terms</a></li>
                                <li><a asp-controller="About" asp-action="index">about us</a></li>
                                <li><a asp-controller="Contact" asp-action="index">contact</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-4 mb-3">
                        <h3 class="text-center text-lg-left">contact</h3>
                        <div class="contact">
                            <ul class="d-flex justify-content-between d-lg-block">
                                <li>
                                    <i class="fas fa-phone fa-rotate-90 mr-3"></i>
                                    <a href="tel:+994703347347">
                                        <span>+994703347347</span>
                                    </a>
                                </li>
                                <li>
                                    <i class="far fa-envelope mr-3"></i>
                                    <a href="mailTo:rentnow@elmaribrahimli.com">
                                        <span>rentnow@elmaribrahimli.com</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    }

    <!-- font awasome -->
    <script src="https://kit.fontawesome.com/73bdb97465.js"></script>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <!-- bootstrap js -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)

    <!-- Custom js -->
    <script src="~/js/main.js"></script>
</body>

</html>